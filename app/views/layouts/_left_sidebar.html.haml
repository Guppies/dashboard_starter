/ sidebar menu

.col-md-3.left_col
  .left_col.scroll-view
    .profile.clearfix
      .profile_pic
        %img.img-circle.profile_img{:alt => "...", :src => "/images/profile.png"}/
      .profile_info
        %span Welcome,
        %h2= current_user.email.split('@').first
      .clearfix
    / /menu profile quick info
    %br/


    #sidebar-menu.main_menu_side.hidden-print.main_menu
      .menu_section
        %ul.nav.side-menu
          %li
            = link_to dashboard_path do
              %i.fa.fa-home
              Home
          %li
            %a
              %i.fa.fa-envelope
              Mail
              %span.fa.fa-chevron-down
            %ul.nav.child_menu
              %li
                = link_to inbox_emails_path do
                  %i.fa.fa-inbox
                  Inbox
              %li
                = link_to sent_emails_path do
                  %i.fa.fa-send
                  Sent
              %li
                = link_to new_email_path do
                  %i.fa.fa-file-text
                  Compose
          - if can? :manage, User
            %li
              %a
                %i.fa.fa-user
                Users
                %span.fa.fa-chevron-down
              %ul.nav.child_menu
                %li
                  = link_to users_path do
                    %i.fa.fa-inbox
                    List users
                %li
                  = link_to new_user_path do
                    %i.fa.fa-plus
                    Add User

      / /menu footer buttons
      .sidebar-footer.hidden-small
        %a{"data-original-title" => "Settings", "data-placement" => "top", "data-toggle" => "tooltip", :title => ""}
          %span.glyphicon.glyphicon-cog{"aria-hidden" => "true"}
        %a{"data-original-title" => "FullScreen", "data-placement" => "top", "data-toggle" => "tooltip", :title => ""}
          %span.glyphicon.glyphicon-fullscreen{"aria-hidden" => "true"}
        %a{"data-original-title" => "Lock", "data-placement" => "top", "data-toggle" => "tooltip", :title => ""}
          %span.glyphicon.glyphicon-eye-close{"aria-hidden" => "true"}

        = link_to destroy_user_session_path, method: 'delete', "data-original-title" => "Logout", "data-placement" => "top", "data-toggle" => "tooltip", :title => "" do
          %span.glyphicon.glyphicon-off{"aria-hidden" => "true"}
